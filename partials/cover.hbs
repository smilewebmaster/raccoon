<div class="cover container">
    <div class="cover-content">
        {{#if @site.icon}}
            <div class="cover-icon">
                <img class="cover-icon-image" src="{{@site.icon}}" alt="{{@site.title}}">
            </div>
        {{/if}}

        {{#if @site.description}}
            <div class="cover-description">{{@site.description}}</div>
        {{/if}}

        {{#if @custom.show_subscribe_panel}}
            {{#unless @member}}
                <div class="cover-cta">
                    <button class="button members-subscribe" data-portal="signup">{{@custom.cover_subscribe_now_button_text}}</button>
                    <button class="button button-secondary members-login" data-portal="signin">{{@custom.cover_login_button_text}}</button>
                </div>
            {{/unless}}
        {{/if}}
    </div>
</div>